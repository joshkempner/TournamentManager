<UserControl x:Class="TournamentManager.Presentation.RefereeItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TournamentManager.Presentation"
             xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
             mc:Ignorable="d" 
             d:DesignWidth="750">
    <DockPanel>
        <StackPanel DockPanel.Dock="Right" Orientation="Horizontal">
            <Button Name="EditCapabilities" Style="{StaticResource ColorHighlightButton}" Padding="10,2">
                <iconPacks:PackIconFontAwesome Kind="CertificateSolid" Width="24" Height="24" Style="{StaticResource FontAwesomeYellowRollover}" />
            </Button>
            <Button Name="EditContactInfo" Style="{StaticResource ColorHighlightButton}" Padding="10,2">
                <iconPacks:PackIconFontAwesome Kind="AddressCardRegular" Width="32" Height="32" Style="{StaticResource FontAwesomeGreenRollover}" />
            </Button>
        </StackPanel>
        <TextBlock Name="FullName" Text="Some Name" FontSize="14" VerticalAlignment="Center" />
    </DockPanel>
</UserControl>
